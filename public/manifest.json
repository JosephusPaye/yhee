{
  "name": "Yhee: Time Tracker",
  "description": "âŒ› Track how much time you spend on different websites and webpages.",
  "version": "0.1",
  "manifest_version": 2,
  "icons": {
    "16": "icon-16.png",
    "19": "icon-19.png",
    "38": "icon-38.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["js/background-script.js"],
    "persistent": false
  },
  "permissions": ["storage", "activeTab"],
  "optional_permissions": ["http://*/*", "https://*/*"]
}
